---
import SlideLink from '../components/SlideLink.astro'

let title = 'TIC I - Slides';
---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<link rel="stylesheet" href={Astro.resolve('../styles/global.css')}>
</head>
<body>
	<main class="text-center">
		<header class="mt-10">
			<div>
				<h1 class="text-4xl">TIC I</h1>
				<h2 class="text-2xl mb-4">Diapositivas de la asignatura</h2>
			</div>
		</header>
	
		<ul class="max-w-xl mx-auto bg-gray-200 drop-shadow p-2 mt-2 text-left">
			<li class="m-4">
				<span class="text-xs mr-2">2022-01-12</span>
				<a href="./2022/presentation">Presentación de asignatura</a>
			</li>
		</ul>

		<div class="flex flex-col max-w-xl mx-auto ">
			<SlideLink slideDate="2022-01-14"></SlideLink>
			<li class="slides-grid p-2 odd:bg-slate-400 even:bg-slate-300">
				<span class="text-xs mr-2">2022-01-28</span>
				<a href="./2022-01-28-programming">Programación</a>
			</li>
		</div>
		
	</main>
</body>
</html>
